                <div class="modal-header">
                    <h5 class="modal-title">Update Matching</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                {% if active_matching is defined and active_matching and update_form is defined and update_form %}
                    <form method="post" action="{{ path('matching_edit', {'id': active_matching.id}) }}">
                        <div class="modal-body">
                            {{ form_start(update_form) }}
                            <div class="form-group">
                                {{ form_label(update_form.name, 'Name') }}
                                {{ form_widget(update_form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {# ...rest of form fields... #}
                            {{ form_end(update_form) }}
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" onclick="location.reload()">Update</button>
                        </div>
                    </form>
                {% else %}
                    <div class="modal-body">
                        <p class="text-center">No matching selected or form not available.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

   
</body> 

{% endblock %} 

{% block javascipt %} 
    <script>
        document.getElementById('correct-message-btn').addEventListener('click', function () {
        // Get the text from the textarea
        const textarea = document.getElementById('message-content');
        const text = textarea.value;

        if (!text) {
            alert('Please enter some text to correct.');
            return;
        }

        // Send the text to the backend for correction
        fetch("{{ path('correct_message_new', {'id': active_matching.id}) }}", {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrf_token('correct_message_new') }}' // Include CSRF token
            },
            body: JSON.stringify({ text: text }) // Send the text in the request body
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            if (data.correctedText) {
                // Update the textarea with the corrected text
                textarea.value = data.correctedText;
            } else {
                alert('No corrections found.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while correcting the text.');
        });
    });
    </script>
{% endblock javascipt %}
