                            {{ form_widget(create_form.numTable, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(create_form.image, 'Image') }}
                            {{ form_widget(create_form.image, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_end(create_form) }}
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Create</button>
