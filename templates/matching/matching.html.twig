{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/front/css/chat.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Additional custom styles */
        .chat-history {
            height: 450px;
            overflow-y: auto;
            scroll-behavior: smooth;
            background-color:rgb(120, 103, 93);
            padding: 15px;
            border-radius: 8px;
        }
        .chat-message input {
            border-radius: 20px;
            padding: 12px;
            border: 1px solid #ccc;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 20px;
            padding: 10px 15px;
        }
        .modal-content {
            background-color: #fff;
            color: #333;
            border-radius: 10px;
            padding: 20px;
        }
        /* Chat List */
        .chat-list li {
            padding: 12px;
            cursor: pointer;
            transition: background 0.3s;
            border-bottom: 1px solid #ddd;
        }
        .chat-list li:hover {
            background:rgb(199, 7, 7);
        }
        .chat-list img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }
        .chat .message {
            background: #007bff;
            color: white;
            padding: 10px;
            border-radius: 8px;
            display: inline-block;
            max-width: 70%;
        }
        .message-data {
            font-size: 12px;
            color: #777;
        }
        .message-actions {
            margin-top: 5px;
            text-align: right;
        }
        .message-actions .btn {
            padding: 2px 6px;
            font-size: 12px;
            margin-left: 5px;
        }
        /* Form label color */
        .input-group-append{
            color: black;
        }
        .form-group label {
            color: black;
        }
        input, textarea {
            color: black !important;
            background-color: white !important;
        }
        .form-control {
            color: black !important;
        }
    </style>
{% endblock %}

{% block body %}
    {# Set active_matching to the first matching if not defined #}
    {% if active_matching is not defined or active_matching is empty %}
        {% set active_matching = matchings|first %}
    {% endif %}
<body>
