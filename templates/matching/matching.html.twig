    <li> </li>

    <!-- Chat Container -->
    <div class="container mt-4">
        <div class="row clearfix">
            <!-- Matching List -->
            <div class="col-lg-4 col-md-6 chat-app">
                <div class="card people-list">
                    <div class="card-header">
                        <h4>Matchings</h4>
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='{{ path('three') }}'">Go to 3D Coffee</button>
                    </div>
                    <form action="{{ path('search_service') }}" method="get">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="search" placeholder="Search services" aria-label="Search services" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#createMatchingModal">Add Matching</button>

                    <div class="card-body">
                        <ul class="list-unstyled chat-list" id="matching-list">
                            {% if matchings is defined and matchings %}
                                {% for matching in matchings %}
                                    {% if matching.user and matching.user.id == app.session.get('user').id or matching.assessors.contains(app.session.get('user')) %}
                                    
                                        <li class="{% if active_matching is defined and active_matching.id == matching.id %}active{% endif %}" >
                                            <a href="javascript:void(0);">
                                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Matching">
                                                <div class="about">
                                                    <div class="name">{{ matching.name }}</div>
                                                    <div class="id"> #{{ matching.id }}</div>
                                                </div>
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <li>No matchings found.</li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>

            <script>
                $(function() {
                    $('#createMatchingModal').on('show.bs.modal', function (event) {
                        var button = $(event.relatedTarget);
                        var modal = $(this);
                        modal.find('.modal-title').text('Create Matching');
                    });

                    $('#matching-list li').click(function(e) {
                        e.preventDefault();
                        var id = $(this).data('id');
                        $.ajax({
                            url: "{{ path('message_by_matching', {'id': 0}) }}/" + id,
                            type: 'GET',
                            success: function(data) {
                                $('#chat-history').html(data);
                            }
                        });
                    });
                });
            </script>

            <!-- Chat Box -->
            <div class="col-lg-8 col-md-6 chat">
                <div class="card">
                    <div class="card-header chat-header">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User">
                        <div class="chat-about">
                            {% if active_matching is defined and active_matching %}
                                <h6 class="m-b-0">{{ active_matching.name }}</h6>
                                <small>{{ active_matching.sujetRencontre }}</small>
                            {% else %}
                                <h6 class="m-b-0">No Matching Selected</h6>
                            {% endif %}
                        </div>
                        <div class="ml-auto">
                            <a href="javascript:void(0);" class="btn btn-outline-info" data-toggle="modal" data-target="#updateMatchingModal">
                                <i class="fa fa-cogs"></i>
                            </a>
                        </div>
                    </div>

                    <div class="card-body chat-history">
                        <ul class="list-unstyled">
                            {% for message in messages %}
                                {% if message.user and message.user.id == app.session.get('user').id %}
                                    <!-- User Message -->
                                    <li class="clearfix">
                                        <div class="message-data text-right">
                                            <span class="message-data-time">
                                                <a href="javascript:void(0);" class="btn btn-sm btn-outline-warning" data-toggle="modal" data-target="#editMessageModal{{ message.id }}">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('message_delete', {'id': message.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                                {{ message.createdAt|date('Y-m-d H:i:s') }}
                                            </span>
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User">
                                        </div>
                                        <div class="message my-message float-right">
                                            {{ message.content }}
                                            
                                        </div>
                                    </li>
                                {% else %}
                                    <!-- Other Users' Messages -->
                                    <li class="clearfix">
                                        <div class="message-data">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User">
                                            <span class="message-data-time">{{ message.createdAt|date('Y-m-d H:i:s') }}
                                              
                                            </span>
                                        </div>
                                        <div class="message other-message">
                                            {{ message.content }}
                                            
                                        </div>
                                    </li>
                                {% endif %}
                            {% endfor %}

                            <!-- Edit Message Modal -->
                            {% for message in messages %}
                                <div class="modal fade" id="editMessageModal{{ message.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Edit Message</h5>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <form method="post" action="{{ path('message_edit', {'id': message.id}) }}">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>Message</label>
                                                        <textarea name="content" class="form-control" required>{{ message.content }}</textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </ul>
                    </div>
{% if active_matching is not null and active_matching is not empty and attribute(active_matching, 'id') is defined %}
    <form method="post" action="{{ path('message_new', {'matchingId': active_matching.id}) }}" class="message-form">
