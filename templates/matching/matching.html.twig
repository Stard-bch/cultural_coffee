{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/front/css/chat.css') }}">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        /* Additional custom styles */
        .chat-history {
            height: 450px;
            overflow-y: auto;
            scroll-behavior: smooth;
            background-color:rgb(108, 81, 62);
            padding: 15px;
            border-radius: 8px;
        }

        .chat-message input {
            border-radius: 20px;
            padding: 12px;
            border: 1px solid #ccc;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 20px;
            padding: 10px 15px;
        }

        .modal-content {
            background-color: #fff;
            color: #333;
            border-radius: 10px;
            padding: 20px;
        }

        /* Chat List */
        .chat-list li {
            padding: 12px;
            cursor: pointer;
            transition: background 0.3s;
            border-bottom: 1px solid #ddd;
        }

        .chat-list li:hover {
            background: #f1f1f1;
        }

        .chat-list img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }

        .chat .message {
            background: #007bff;
            color: white;
            padding: 10px;
            border-radius: 8px;
            display: inline-block;
            max-width: 70%;
        }

        .message-data {
            font-size: 12px;
            color: #777;
        }

        .message-actions {
            margin-top: 5px;
            text-align: right;
        }

        .message-actions .btn {
            padding: 2px 6px;
            font-size: 12px;
            margin-left: 5px;
        }
    </style>
{% endblock %}

{% block body %}
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="home">Rendez-Vous<small>Culture</small></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a href="home" class="nav-link">Accueil</a></li>
                    <li class="nav-item"><a href="rencontre" class="nav-link">Rencontres</a></li>
                    <li class="nav-item"><a href="indexService" class="nav-link">Services</a></li>
                    <li class="nav-item"><a href="evenement" class="nav-link">Événements</a></li>
                    <li class="nav-item"><a href="forum" class="nav-link">Forum</a></li>
                    <li class="nav-item"><a href="produit" class="nav-link">Boutique</a></li>
                    <li class="nav-item"><a href="contact" class="nav-link">Contact</a></li>
                    <li class="nav-item"><a href="login" class="nav-link">Connexion</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Chat Container -->
    <div class="container">
        <div class="row clearfix">
            <!-- Matching List -->
            <div class="col-lg-4 col-md-6 chat-app">
                <div class="card people-list">
                    <div class="card-header">
                        <h4>Matchings</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled chat-list">
                            {% for matching in matchings %}
                                <li class="{% if matching.id == matching.id %}active{% endif %}">
                                    <a href="{{ path('matching', {'id': matching.id}) }}">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Matching">
                                        <div class="about">
                                            <div class="name">Matching #{{ matching.id }}</div>
                                        </div>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Chat Box -->
            <div class="col-lg-8 col-md-6 chat">
                <div class="card">
                    <div class="card-header chat-header">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User">
                        <div class="chat-about">
                            <h6 class="m-b-0">{{ matching.name }}</h6> <!-- Name of the matching -->
                            <small>{{ matching.sujetRencontre }}</small> <!-- Subject of the matching -->
                        </div>
                        <div class="ml-auto">
                            <a href="javascript:void(0);" class="btn btn-outline-info" data-toggle="modal" data-target="#updateMatchingModal">
                                <i class="fa fa-cogs"></i> <!-- Icon for updating matching -->
                            </a>
                        </div>
                    </div>

                    <div class="card-body chat-history">
                        <ul class="list-unstyled">
                            {% for message in messages %}
                                {% if message.user.id == 1 %}
                                    <!-- User Message -->
                                    <li class="clearfix message-actions">
                                    
                                        <div class="message-data text-right">
                                        
                                            <span class="message-data-time">
                                            <a href="javascript:void(0);" class="btn btn-sm btn-outline-warning" data-toggle="modal" data-target="#editMessageModal{{ message.id }}">
                                                    <i class="fa fa-edit"></i> <!-- Edit button -->
                                                </a>
                                                <a href="{{ path('message_delete', {'id': message.id}) }}" class="btn btn-sm btn-outline-danger">
                                                    <i class="fa fa-trash"></i> <!-- Delete button -->
                                                </a>
                                            {{ message.createdAt|date('Y-m-d H:i:s') }}
                      
                                            </span> <!-- Full date -->
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User">
                                        </div>
                                        <div class="message my-message float-right">
                                            {{ message.content }}
                                            
                                        </div>
                                    </li>
                                {% else %}
                                    <!-- Other Users' Messages -->
                                    <li class="clearfix">
                                        <div class="message-data">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User">
                                            <span class="message-data-time">{{ message.createdAt|date('Y-m-d H:i:s') }}</span> <!-- Full date -->
                                        </div>
                                        <div class="message other-message">
                                            {{ message.content }}

                                        </div>
                                    </li>
                                {% endif %}

                                <!-- Edit Message Modal -->
                                <div class="modal fade" id="editMessageModal{{ message.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Edit Message</h5>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <form method="post" action="{{ path('message_edit', {'id': message.id}) }}">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>Message</label>
                                                        <textarea name="content" class="form-control" required>{{ message.content }}</textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </ul>
                    </div>

                    <!-- Message Input Form -->
                    <div class="card-footer chat-message">
                        <form action="{{ path('message_new', {'matchingId': matching.id}) }}" method="POST">
                            <div class="input-group">
                                <input type="text" name="contenu" class="form-control" placeholder="Type your message..." required>
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Update Matching Modal -->
    <div class="modal fade" id="updateMatchingModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Matching</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <form method="post" action="{{ path('matching_edit', {'id': matching.id}) }}">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="name" class="form-control" value="{{ matching.name }}" required>
                        </div>
                        <div class="form-group">
                            <label>Sujet</label>
                            <input type="text" name="sujetRencontre" class="form-control" value="{{ matching.sujetRencontre }}" required>
                        </div>
                        <div class="form-group">
                            <label>Participants</label>
                            <input type="number" name="nbrPersonneMatchy" class="form-control" value="{{ matching.nbrPersonneMatchy }}" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
{% endblock %}