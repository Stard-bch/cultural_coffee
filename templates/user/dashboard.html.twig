{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block stylesheets %}
    <style>
        @import url('https://fonts.googleapis.com/css?family=Montserrat:400,800');

        .profile-container {
            max-width: 600px;
            margin: auto;
            text-align: center;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .profile-info p {
            font-size: 18px;
            margin: 5px 0;
        }

        .profile-photo img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-top: 15px;
            border: 3px solid #007bff;
        }

        .logout-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #dc3545;
            color: white;
            border-radius: 5px;
            text-decoration: none;
        }

        .logout-btn:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="profile-container">
            <h1>Bienvenue, {{ user.nomUser }} {{ user.prenomUser }}</h1>

            <div class="profile-info">
                <p><strong>Nom:</strong> {{ user.nomUser }}</p>
                <p><strong>Prénom:</strong> {{ user.prenomUser }}</p>
                <p><strong>Email:</strong> {{ user.emailUser }}</p>
                <p><strong>Adresse:</strong> {{ user.adresse }}</p>
                <p><strong>Téléphone:</strong> {{ user.telephoneUser }}</p>
                <p><strong>Date de Naissance:</strong> {{ user.dateNaissanceUser|date('d-m-Y') }}</p>

                {% if user.photoUser %}
                    <div class="profile-photo">
                        <img src="{{ asset('uploads/' ~ user.photoUser) }}" alt="Profile Picture">
                    </div>
                {% else %}
                    <p>Aucune photo de profil disponible</p>
                {% endif %}
            </div>

            <a href="{{ path('app_logout') }}" class="logout-btn">Déconnexion</a>
            <hr>
            <form action="{{ path('app_delete_profile') }}" method="POST" onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
                <button type="submit" class="btn btn-danger">Delete My Profile</button>
            </form>
            <!-- Edit Profile Button -->
            <a href="#" class="edit-btn" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit Profile</a>

        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Profile Edit Form -->
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.nomUser) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.prenomUser) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.emailUser) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.telephoneUser) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.adresse) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.dateNaissanceUser) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.photoUser) }}  <!-- Corrected form field name here -->
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
