{% extends 'base.html.twig' %}

{% block title %}Détails de la Réservation{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4 shadow-lg text-white" style="max-width: 500px; background-color: #1c1c1c; border-radius: 12px;">
            <div class="card-body">
                <h3 class="text-center text-uppercase font-weight-bold mb-4">Détails de la Réservation</h3>
                
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-hashtag text-warning mr-3"></i>
                    <span class="font-weight-bold">ID:</span> <span class="ml-auto">{{ reservation.id }}</span>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-calendar-alt text-warning mr-3"></i>
                    <span class="font-weight-bold">Date de réservation:</span> 
                    <span class="ml-auto">{{ reservation.dateBooking ? reservation.dateBooking|date('Y-m-d') : '' }}</span>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-users text-warning mr-3"></i>
                    <span class="font-weight-bold">Nombre de places:</span> 
                    <span class="ml-auto">{{ reservation.nbrPlaces }}</span>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-info-circle text-warning mr-3"></i>
                    <span class="font-weight-bold">Statut:</span> 
                    <span class="ml-auto">{{ reservation.statutBooking }}</span>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-credit-card text-warning mr-3"></i>
                    <span class="font-weight-bold">Moyen de paiement:</span> 
                    <span class="ml-auto">{{ reservation.moyenPayementBooking }}</span>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('reservationBack') }}" class="btn btn-warning text-dark px-4">Retour</a>
                    {{ include('reservation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
