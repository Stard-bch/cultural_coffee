<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

{% block body %}
<div class="form-container">
    <div class="form-wrapper">
        <h1>Ajouter un événement</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group">
            <i class="fas fa-heading"></i>
            {{ form_label(form.titre_evenement) }}
            {{ form_widget(form.titre_evenement, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titre_evenement) }}

        </div>

        <div class="form-group">
            <i class="fas fa-align-left"></i>
            {{ form_label(form.description_event) }}
            {{ form_widget(form.description_event, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description_event) }}
            
        </div>

        <div class="form-group">
            <i class="fas fa-calendar-alt"></i>
            {{ form_label(form.date_event) }}
            {{ form_widget(form.date_event, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date_event) }}
        </div>

        <div class="form-group">
            <i class="fas fa-tag"></i>
            {{ form_label(form.prix_event) }}
            {{ form_widget(form.prix_event, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix_event) }}
        </div>

        <div class="form-group">
            <i class="fas fa-image"></i>
            {{ form_label(form.image_event) }}
            {{ form_widget(form.image_event, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.image_event) }}
        </div>

        <div class="form-group">
            <i class="fas fa-list-alt"></i>
            {{ form_label(form.type_event) }}
            {{ form_widget(form.type_event, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type_event) }}
        </div>

        <div class="form-group">
            <i class="fas fa-users"></i>
            {{ form_label(form.capaciteMax) }}
            {{ form_widget(form.capaciteMax, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.capaciteMax) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary mt-3'}}) }}
        </div>

        {{ form_end(form) }}

        <div class="button-container">
            <a href="{{ path('app_evenement_back_index') }}" class="btn-back">Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}

<style>
    /* Center the form on the page */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Full height */
        padding: 20px;
        background-image: linear-gradient(45deg, #A88469, #957058);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    /* Style the form wrapper */
    .form-wrapper {
        max-width: 500px;
        width: 100%;
        background: #dfc4a6;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Style the form title */
    .form-wrapper h1 {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    /* Style form inputs */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    /* Style the form button */
    .form-wrapper .btn {
        width: 100%;
        padding: 10px;
        background-color: #8B4513; /* Brown color to match your theme */
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .form-wrapper .btn:hover {
        background-color: #A0522D; /* Darker brown on hover */
    }

    /* Style the "back to list" link */
    .form-wrapper a {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #8B4513; /* Brown color to match your theme */
        text-decoration: none;
    }

    .form-wrapper a:hover {
        text-decoration: underline;
    }

    /* Style form errors */
    .form-errors {
        color: #ff0000;
        font-size: 14px;
        margin-bottom: 15px;
    }

    /* Style for form groups with icons */
    .form-group {
        position: relative;
        margin-bottom: 15px;
    }

    .form-group i {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #8B4513; /* Brown color to match your theme */
    }

    .form-group .form-control {
        padding-left: 40px; /* Adjust padding to make space for the icon */
    }

    /* Style for the button container */
    .button-container {
        display: flex;
        justify-content: space-between; /* Aligns one item to the left and the other to the right */
        margin-top: 20px; /* Adjust spacing as needed */
    }

    /* Style for the "Retour à la liste" button */
    .btn-back {
        padding: 10px 20px;
        background-color: #8B4513; /* Brown color to match your theme */
        color: #fff; /* White text */
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
    }

    .btn-back:hover {
        background-color: #A0522D; /* Darker brown on hover */
        color: #fff; /* Ensure text stays white on hover */
    }

    /* Style for the delete form button */
    .button-container form {
        margin: 0; /* Remove default form margin */
    }

    .button-container form button {
        padding: 10px 20px;
        background-color: #dc3545; /* Red color for delete button */
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .button-container form button:hover {
        background-color: #c82333; /* Darker red on hover */
    }
.form-group {
    position: relative;
    margin-bottom: 10px; /* Réduit l’espace entre les champs */
}

.form-errors {
    position: absolute;
    bottom: -18px; /* Ajuste la position sous le champ */
    left: 5px; /* Décale légèrement pour l’alignement */
    width: max-content; /* Ajuste la largeur à l'erreur */
}

</style>
