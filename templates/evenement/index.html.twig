{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenement Index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Prix</th>
                <th>Type</th>
                <th>Capacit√©</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.titreEvenement }}</td>
                <td>{{ evenement.descriptionEvent }}</td>
                <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.prixEvent }}</td>
                <td>{{ evenement.typeEvent }}</td>
                <td>{{ evenement.capaciteMax }}</td>
                <td>
                    <a href="{{ path('app_evenement_back_show', {'id': evenement.id}) }}">Show</a>
                    <a href="{{ path('app_evenement_back_edit', {'id': evenement.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{path('app_evenement_back_new') }}">Create new</a>
{% endblock %}