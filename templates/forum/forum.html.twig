    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center mt-5">
          <div class="col-md-6">
            {% if form is defined %}
            <div class="card">
              <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
                <div class="form-group">
                  {{ form_widget(form.description_post, {'attr': {'class': 'form-control', 'placeholder':'Avez-vous des pensées?'}}) }}
                </div>
                <div class="form-group">
                  {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group text-center">
                  <button type="submit" class="btn btn-primary">Publier</button>
                </div>
                {{ form_end(form) }}
              </div>
            </div>
            {% endif %}
          </div>
        </div>
        <div class="row d-flex mt-5">
          {% for post in posts %}
          <div class="col-md-4 d-flex ftco-animate">
          	<div class="blog-entry align-self-stretch" style="opacity: 0.8;">
              <a href="{{ path('post_show', {'id': post.id}) }}" class="block-20" style="background-image: url('{{ asset('uploads/' ~ post.image) }}');">
               <img src="{{ asset('uploads/' ~ post.image) }}" alt="Image du post" style="width:100%; height:auto;">
              </a>
              <div class="text py-4 d-block">
              	<div class="meta">
                  <div><a href="#">{{ post.datePost|date('M d, Y') }}</a></div>
                  <div><a href="#">{{ post.nomUser }}</a></div>
                  <a href="javascript:void(0);" class="meta-chat" onclick="toggleCommentForm('{{ post.id }}')">
                    <div>
                        <span class="icon-chat">{{ post.commentaires|length }}</span>
                    </div>
                  </a>
                        
                {% if post.user.id == 1 %}
                <div class="text-right">
                  <a href="{{ path('forum_delete', {'id': post.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?');">Supprimer</a>
                </div>
                <a href="{{ path('forum_edit', {'id': post.id}) }}" class="btn btn-primary">Modifier</a>
                {% endif %}
                </div>
                <h3 class="heading mt-2"><a href="#">{{ post.descriptionPost }}</a></h3>
                <!-- Formulaire de commentaire -->
                
                 <div id="comment-form-{{ post.id }}" class="comment-form" style="display: none;">
  {% if commentForms is defined and commentForms[post.id] is defined %}
    {{ form_start(commentForms[post.id], {'attr': {'method': 'post', 'action': path('forum_add_comment', {'id': post.id})}}) }}
    <div class="form-group">
      {{ form_widget(commentForms[post.id].contenu, {'attr': {'class': 'form-control', 'placeholder':'Ajouter un commentaire...'}}) }}
    </div>
    <div class="form-group text-center">
      <button type="submit" class="btn btn-success btn-sm">Commenter</button>
    </div>
    {{ form_end(commentForms[post.id]) }}
  {% endif %}
</div>

           <!-- Affichage des commentaires -->
           <div class="comments mt-3">
            {% for commentaire in post.commentaires %}
    <div class="comment-box p-2 border rounded mt-2">
        <strong>{{ commentaire.user ? commentaire.user.getNomUser : 'Utilisateur inconnu' }}</strong>
        <p>{{ commentaire.contenu }}</p>
        <small class="text-muted">{{ commentaire.dateCommentaire|date('d M Y, H:i') }}</small>
        
        {% if commentaire.user and commentaire.user.id == 1 %}
            <div class="text-right mt-2">
                <a href="{{ path('forum_edit_comment', {'id': commentaire.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                  <a href="{{ path('forum_delete_comment', {'id': commentaire.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?');">Supprimer</a>

            </div>
        {% endif %}
    </div>
{% else %}
    <p class="text-muted">Aucun commentaire pour le moment.</p>
{% endfor %}

</div>

                
              </div>
            </div>
          </div>
          {% endfor %}
