{% block css %}
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>Dashtreme Admin - Free Dashboard for Bootstrap 4 by Codervent</title>
    <!-- loader-->
    <link href="{{ asset('assets/back/css/pace.min.css') }}" rel="stylesheet"/>
    <script src="{{ asset('assets/back/js/pace.min.js') }}"></script>
    <!--favicon-->
    <link rel="icon" href="{{ asset('assets/back/images/favicon.ico') }}" type="image/x-icon">
    <!-- Bootstrap core CSS-->
    <link href="{{ asset('assets/back/css/bootstrap.min.css') }}" rel="stylesheet"/>
    <!-- animate CSS-->
    <link href="{{ asset('assets/back/css/animate.css') }}" rel="stylesheet" type="text/css"/>
    <!-- Icons CSS-->
    <link href="{{ asset('assets/back/css/icons.css') }}" rel="stylesheet" type="text/css"/>
    <!-- Custom Style-->
    <link href="{{ asset('assets/back/css/app-style.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
<body class="bg-theme bg-theme1">
<div id="pageloader-overlay" class="visible incoming">
    <div class="loader-wrapper-outer">
        <div class="loader-wrapper-inner"><div class="loader"></div></div>
    </div>
</div>

<div id="wrapper">
    <div class="card card-authentication1 mx-auto my-5">
        <div class="card-body">
            <div class="card-content p-2">
                <div class="text-center">
                    <img src="{{ asset('assets/back/images/logo-icon.png') }}" alt="logo icon">
                </div>
                <div class="card-title text-uppercase text-center py-3">Register</div>
<form method="POST" enctype="multipart/form-data" action="{{ path('app_register') }}">
                    <!-- First Name -->
                    <div class="form-group">
                        <label for="exampleInputFirstName" class="sr-only">First Name</label>
                        <div class="position-relative has-icon-right">
                            <input type="text" id="exampleInputFirstName" name="nom_user" class="form-control input-shadow" placeholder="Enter First Name" required>
                            <div class="form-control-position">
                                <i class="icon-user"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="form-group">
                        <label for="exampleInputLastName" class="sr-only">Last Name</label>
                        <div class="position-relative has-icon-right">
                            <input type="text" id="exampleInputLastName" name="prenom_user" class="form-control input-shadow" placeholder="Enter Last Name" required>
                            <div class="form-control-position">
                                <i class="icon-user"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="exampleInputEmail" class="sr-only">Email</label>
                        <div class="position-relative has-icon-right">
                            <input type="email" id="exampleInputEmail" name="email_user" class="form-control input-shadow" placeholder="Enter Email" required>
                            <div class="form-control-position">
                                <i class="icon-envelope"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label for="exampleInputPassword" class="sr-only">Password</label>
                        <div class="position-relative has-icon-right">
                            <input type="password" id="exampleInputPassword" name="password" class="form-control input-shadow" placeholder="Enter Password" required>
                            <div class="form-control-position">
                                <i class="icon-lock"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label for="exampleInputAddress" class="sr-only">Address</label>
                        <div class="position-relative has-icon-right">
                            <input type="text" id="exampleInputAddress" name="adresse" class="form-control input-shadow" placeholder="Enter Address" required>
                            <div class="form-control-position">
                                <i class="icon-location-pin"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Telephone -->
                    <div class="form-group">
                        <label for="exampleInputTelephone" class="sr-only">Telephone</label>
                        <div class="position-relative has-icon-right">
                            <input type="number" id="exampleInputTelephone" name="telephone_user" class="form-control input-shadow" placeholder="Enter Telephone" required>
                            <div class="form-control-position">
                                <i class="icon-phone"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Date of Birth -->
                    <div class="form-group">
                        <label for="exampleInputDob" class="sr-only">Date of Birth</label>
                        <div class="position-relative has-icon-right">
                            <input type="date" id="exampleInputDob" name="dateNaissance_user" class="form-control input-shadow" required>
                            <div class="form-control-position">
                                <i class="icon-calendar"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Picture -->
                    <div class="form-group">
                        <label for="exampleInputProfilePic" class="sr-only">Profile Picture</label>
                        <div class="position-relative has-icon-right">
                            <input type="file" id="exampleInputProfilePic" name="photo_user" class="form-control input-shadow" accept="image/*">
                            <div class="form-control-position">
                                <i class="icon-camera"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-light btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script src="{{ asset('assets/back/js/jquery.min.js') }}"></script>
<script src="{{ asset('assets/back/js/popper.min.js') }}"></script>
<script src="{{ asset('assets/back/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/back/js/sidebar-menu.js') }}"></script>
<script src="{{ asset('assets/back/js/app-script.js') }}"></script>
{% endblock %}
